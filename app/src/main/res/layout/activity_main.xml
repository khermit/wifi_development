<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quandk.wifi_development.MainActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx_GPS"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/allNetWork" />

    <TextView
        android:text="当前没有扫描到Wifi网络"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="141dp"
        android:id="@+id/allNetWork"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="#FF0000"
        android:layout_below="@+id/tx_GPS"
        android:layout_alignParentStart="true" />

</RelativeLayout>
